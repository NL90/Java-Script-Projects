let raceNumber = Math.floor(Math.random() * 1000);
let registrationTime = "Early";
let runnersAge = 30;

if(runnersAge >= 18 && registrationTime === "Early") {
  raceNumber = raceNumber += 1000;
  console.log('Your race number is ' + raceNumber + '.');
  console.log("Race beginns at 09:30am.")
} else if(runnersAge >= 18 && registrationTime != "Early") {
  console.log("The late adult class beginns at 11:00am." )
} else {
  console.log("For the young class will begin at 12:30pm.")
};
